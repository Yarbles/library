<html>
<head>
  <title>Library Database</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class='container'>
    <h1>{{ book.getTitle }}</h1>

    {% if patrons is not empty %}
      <p>Here are all Patrons in the Database:</p>
      <ul>
        {% for patron in patrons %}
          <li>{{ patron.getName }} : {{ patron.getPhone }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <h4>Add a S to this Course:</h4>

    <form action='/add_students' method='post'>
      <input id='course_id' name='course_id' type='hidden' value='{{ book.getId }}'>
      <label for='course_id'>Select a Student</label>
      <select id='student_id' name='student_id' type='text'>
        {% for patron in all_students %}
          <option value='{{ patron.getId }}'>{{ patron.getFullname }}</option>
        {% endfor %}
      </select>
      <button type='submit'>Add Student</button>
    </form>
    <p><a href='/courses/{{ book.getId }}/edit'>Edit this Course</a></p>
    <p><a href='/'>Home</a></p>
  </div>
</body>
</html>
